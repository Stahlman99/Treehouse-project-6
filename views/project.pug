extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= projects[id].project_name

        p.lead.text-light
          | #{projects[id].description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each tech in projects[id].technologies
            li= tech

        a.button.expanded(target='_blank' href=`${projects[id].live_link}`) Live Demo
        a.button.expanded(target='_blank' href=`${projects[id].github_link}`) GitHub Repo
    br
    if projects[id].image_urls[1] !== undefined
      img.image(src=`${projects[id].image_urls[1]}`)
    if projects[id].image_urls[2] !== undefined
      img.image(src=`${projects[id].image_urls[2]}`)
    if projects[id].image_urls[3] !== undefined
      img.image(src=`${projects[id].image_urls[3]}`)